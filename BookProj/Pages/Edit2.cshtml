@page
@model Edit2Model

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.Book.Title)</label>
        <input type="text" asp-for="Book.Title" />
    </div>

    <div class="form-group">
        <label>@Html.DisplayNameFor(m => m.Book.Price)</label>
        <input type="text" asp-for="Book.Price" />
        <span asp-validation-for="Book.Price"></span>
    </div>

    <div class="form-group">
        <input type="checkbox" asp-for="Book.CheckedOut" />
        <label>@Html.DisplayNameFor(x => x.Book.CheckedOut)</label>
    </div>

    <input type="hidden" asp-for="Book.Id" />
    <input type="submit" value="Save" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}